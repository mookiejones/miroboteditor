< Workbench:FullScreenEnabledWindow 
        x:Class="MainApplication.WpfWorkbench"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:Workbench="clr-namespace:MainApplication.GUI.Workbench"
        xmlns:MainApplication="clr-namespace:MainApplication" Title="MainWindow" Height="350" Width="525"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        Title="{MainWindow.DialogName}"
        Style="{x:Static MainApplication:GlobalStyles.WindowStyle}"
        AllowDrop="True"
  >

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo/>
    </Window.TaskbarItemInfo>
    <DockPanel Name="dockPanel">
        <Menu Name="mainMenu" DockPanel.Dock="Top"/>
        <!-- Toolbars will be inserted here (index:1-->
        <!-- Statusbar will be inserted here (index:Count-2-->
        <ContentPresenter Name="mainContent"/>
    </DockPanel>

</Workbench:FullScreenEnabledWindow>
