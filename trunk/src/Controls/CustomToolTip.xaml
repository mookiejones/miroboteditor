<UserControl x:Class="miRobotEditor.Controls.CustomToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctt="clr-namespace:miRobotEditor.Classes"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
      <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Title}" FontWeight="ExtraBold" FontSize="12"/>
        <Separator/>
        <TextBlock Text="{Binding TextContent}"/>
        <TextBlock Text="{Binding Additional}"/>
    </StackPanel>
</UserControl>
