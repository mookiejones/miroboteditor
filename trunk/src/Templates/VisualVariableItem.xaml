<DataGrid
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Converters="clr-namespace:miRobotEditor.Converters" xmlns:avalondock="http://avalondock.codeplex.com" x:Class="miRobotEditor.Templates.VisualVariableItem" 
             mc:Ignorable="d" 
              AutoGenerateColumns="False"
              IsReadOnly="True"                
             d:DesignHeight="300" d:DesignWidth="300"
              ToolTipOpening="ToolTip_Opening"  
                  MouseDoubleClick="OnMouseDoubleClick">
    <DataGrid.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/miRobotEditor;component/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>


            <avalondock:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>


            <Converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>


            <Style TargetType="{x:Type DataGridRow}">
                <Setter Property="ToolTip">
                    <Setter.Value>
                        <GroupBox Header="{Binding Name}" FontWeight="ExtraBold" FontSize="14" Foreground="White">
                            <GroupBox.Resources>
                                <Style	TargetType="{x:Type TextBlock}">
                                    <Setter Property="FontWeight" Value="Normal" />
                                    <Setter Property="Foreground" Value="Black"/>
                                </Style>
                            </GroupBox.Resources>
                            <StackPanel	Orientation="Vertical">
                                <TextBlock Text="{Binding Type, StringFormat=Offset:\=\{0\}}" Visibility="{Binding Type, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <TextBlock Text="{Binding Path, StringFormat=Returns:\=\{0\}}" Visibility="{Binding Path, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <TextBlock Text="{Binding Value, StringFormat=Returns:\=\{0\}}" Visibility="{Binding Value, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </StackPanel>
                        </GroupBox>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>

    </DataGrid.Resources>
    <DataGrid.Columns>
        <DataGridTemplateColumn  Width="Auto" IsReadOnly="True">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <Image Source="{Binding Icon}" Height="16" Width="16" />
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <!--Name-->
        <DataGridTextColumn Header="Name" Width="Auto" Binding="{Binding Name}"/>
        <!--Type-->
        <DataGridTextColumn Header="Type" Width="Auto"  Binding="{Binding Type}"/>

        <!--Value-->
        <DataGridTextColumn Header="Value" Width="Auto"  Binding="{Binding Value}"/>

        <!--Path-->
        <DataGridTextColumn Header="Path" Width="*"  Binding="{Binding Path}"/>

    </DataGrid.Columns>
</DataGrid>
