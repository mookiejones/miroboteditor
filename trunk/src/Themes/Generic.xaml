<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:miRobotEditor.Converters"
    xmlns:classes="clr-namespace:miRobotEditor.Classes"
    xmlns:rkc="clr-namespace:miRobotEditor.Common.ResourceAccess" xmlns:GUI="clr-namespace:miRobotEditor.GUI">
    <rkc:ResourceKeyConverter x:Key="ResourceKeyConverter" />
    <converters:DoubleToStringConverter x:Key="DoubleToStringConverter"/>	
    <classes:GlobalOptionsViewModel x:Key="GlobalOptions"/>
    <GUI:TextEditorOptions  x:Key="TextOptions"  
                                ShowSpaces="True" 
                                RequireControlModifierForHyperlinkClick="True"
                                EnableRectangularSelection="True"
                                EnableEmailHyperlinks="True"
                                EnableHyperlinks="True"
                                ShowTabs="True" 
                                ShowEndOfLine="True" 
                                ConvertTabsToSpaces="True" EnableFolding="True" AllowScrollBelowDocument="False" />
</ResourceDictionary>
