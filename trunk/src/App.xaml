<Application x:Class="miRobotEditor.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:miEditor="clr-namespace:miRobotEditor"
             StartupUri="MainWindow.xaml"
              DispatcherUnhandledException="AppDispatcherUnhandledException"
             >
    <Application.Resources>        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Styles.xaml" />                
                <ResourceDictionary Source="Themes/ToolTipTemplate.xaml" />
                <ResourceDictionary Source="Templates/MenuDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <miEditor:Workspace x:Key="Workspace"/>

        </ResourceDictionary>
    </Application.Resources>
    <JumpList.JumpList>
        <JumpList ShowRecentCategory="True" ShowFrequentCategory="True"  >
            <JumpTask Title="Help" Description="Help Me!!!" />
        </JumpList>
    </JumpList.JumpList>
</Application>