<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="miRobotEditor.GUI.EditorDoc.EditorDoc" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:editor="clr-namespace:miRobotEditor.Controls">
	<Grid>
		<editor:Editor x:Name="dataeditor"
			VerticalAlignment="Stretch"
			HorizontalAlignment="Stretch" />
		<StatusBar
			HorizontalAlignment="Stretch"
			VerticalAlignment="Bottom"
			Height="30">
		<StatusBarItem
				Content="AvalonDock 1.3 Sample Project" />
		<StatusBarItem
				Content="{Binding dataeditor.TextArea.Caret.Column}" />
		</StatusBar>
	</Grid>
</UserControl>