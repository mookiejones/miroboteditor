<UserControl x:Class="miRobotEditor.GUI.FunctionWindow.FunctionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:FunctionWindow="clr-namespace:miRobotEditor.GUI.FunctionWindow" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <FunctionWindow:FunctionItems x:Key="Items" />
    </UserControl.Resources>
    <Grid>
        <ListView x:Name="liItems" ItemsSource="{Binding Items}"  ToolTipOpening="liItems_ToolTipOpening" SelectionChanged="SelectedItemChanged" MouseMove="ListBox_MouseMove" MouseDoubleClick="DoubleClick"/>
    </Grid>
</UserControl>
