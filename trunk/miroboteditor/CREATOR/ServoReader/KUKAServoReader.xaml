<UserControl x:Class="CREATOR.KUKAServoReader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:CREATOR"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.ColumnSpan="2" ItemsSource="{Binding List}"/>        
        <Button Content="Open" Click="OpenFile" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
        <Button Content="Close"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1"/>
    </Grid>
</UserControl>
