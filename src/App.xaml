<Application x:Class="miRobotEditor.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:GUI="clr-namespace:miRobotEditor.GUI" StartupUri="MainWindow.xaml"
              DispatcherUnhandledException="AppDispatcherUnhandledException"
             >
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes\Generic.xaml" />
                <ResourceDictionary Source="Themes/ExtendedGridSplitter.xaml" />
                <ResourceDictionary Source="Themes/AdjustST.xaml" />
           <!--         <ResourceDictionary Source="Themes/ExplorerWindow.xaml" /> -->
                <ResourceDictionary Source="Themes/Colors.xaml" />
                <ResourceDictionary Source="Themes/StatusBar.xaml" />
                <ResourceDictionary Source="Themes/Styles.xaml" />
        		<ResourceDictionary Source="Themes/MenuDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>     
            <GUI:TextEditorOptions  x:Key="TextOptions"  
                                ShowSpaces="True" 
                                RequireControlModifierForHyperlinkClick="True"
                                EnableRectangularSelection="True"
                                EnableEmailHyperlinks="True"
                                EnableHyperlinks="True"
                                ShowTabs="True" 
                                ShowEndOfLine="True" 
                                ConvertTabsToSpaces="True" EnableFolding="True" AllowScrollBelowDocument="False" />
        </ResourceDictionary>
        
    </Application.Resources>
   
</Application>