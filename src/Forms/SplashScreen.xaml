<Window x:Class="miRobotEditor.Forms.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:classes="clr-namespace:miRobotEditor.Forms"
         WindowStartupLocation="CenterScreen" ShowInTaskbar="False"  WindowStyle="None"  Background="Transparent" BorderBrush="Transparent" BorderThickness="0"  ResizeMode="NoResize">
    <StackPanel Orientation="Vertical">
        <Image Source="/miRobotEditor;component/Resources/splash.png" />
        <Label Height="28" Margin="19,0,17,15"  VerticalAlignment="Bottom"
               Content="{Binding Source={x:Static classes:MessageListener.Instance},Path=Message}" Foreground="White"></Label>

    </StackPanel>
</Window>
