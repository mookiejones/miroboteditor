<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="miRobotEditor.GUI.Options.Options" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Options"
	Height="300"
	Width="300">
	<Grid
		Background="#FFE3E3E3">
		<Grid.Resources>
			<Style
				TargetType="{x:Type TabControl}">
				<Setter
					Property="Background"
					Value="#FFE3E3E3" />
			</Style>
		</Grid.Resources>
		<TabControl
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch">
			<TabItem
				Header="Editor">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="1*" />
						<ColumnDefinition
							Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="1*" />
						<RowDefinition
							Height="2*" />
					</Grid.RowDefinitions>
					<TextBlock
						Text="Background Color"
						Grid.Row="0"
						/>
				</Grid>
			</TabItem>
		</TabControl>
	</Grid>
</Window>