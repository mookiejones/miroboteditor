<avalonDock:LayoutAnchorable
             xmlns:avalonDock="http://avalondock.codeplex.com"    
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:miRobotEditor.GUI" x:Class="miRobotEditor.GUI.FunctionWindow"
             mc:Ignorable="d" 
             IsVisibleChanged="VisiblityChanged"  
   
    Title="Functions"
    CanAutoHide="True"
    CanClose="True"
          >
 
       
        <ListView ItemsSource="{Binding Items}" MouseMove="ListBoxMouseMove" Background="White" Foreground="Black"    SelectedItem="{Binding CurrentItem,Mode=TwoWay}"  >
            <ListView.Resources>
                <Style TargetType="{x:Type ListViewItem}">
                    <EventSetter Event="MouseDoubleClick" Handler="gMouseDoubleClick"/>
                </Style>
            </ListView.Resources>
            <ListView.DataContext>
                <local:FunctionWindowViewModel/>
            </ListView.DataContext>
            <ListView.ItemTemplate>
                <DataTemplate>
                <TextBlock Text="{Binding Text}"/>
            </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    
</avalonDock:LayoutAnchorable>
