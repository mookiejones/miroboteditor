<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="miRobotEditor.Controls.GotoDialog"
        Title="Go To Line"  Background="{DynamicResource BackgroundGradient}"  
        ResizeMode="NoResize" 
    
        FocusManager.FocusedElement="{Binding ElementName=EnteredText}"
        ShowInTaskbar="False" 
    Loaded="GotoDialog_OnLoaded"
        Height="140"
        BorderThickness="1"
        Width="200"
        HorizontalAlignment="Stretch"

        VerticalAlignment="Stretch" ShowActivated="False">
    <StackPanel Orientation="Vertical" >
       
        <TextBlock x:Name="Description"  HorizontalAlignment="Stretch" Margin="5" TextWrapping="Wrap" Text="{Binding Description, BindsDirectlyToSource=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Top" Height="20" d:LayoutOverrides="Margin"/>
        <TextBox  x:Name="EnteredText"  TabIndex="1" HorizontalAlignment="Stretch" Margin="5" TextWrapping="Wrap" VerticalAlignment="Stretch" Text="{Binding EnteredText}"  Height="25" d:LayoutOverrides="Margin"/>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" Margin="5" >
        <Button x:Name="btnOK"  Click="OKButtonClick" Content="_OK" HorizontalAlignment="Right"  VerticalAlignment="Stretch" Width="75" Margin="5,0"  />
        <Button x:Name="btnCancel" Click="cancelButtonClick" Content="_Cancel" HorizontalAlignment="Right"   VerticalAlignment="Stretch" Width="75" Margin="5,0" />
        </StackPanel>
    </StackPanel>
</Window>
