<Application x:Class="MainApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalon="http://avalondock.codeplex.com"
             xmlns:MainApplication="clr-namespace:MainApplication" StartupUri="GUI\Workbench\WpfWorkbench.xaml">
    <Application.Resources>
        <!-- Style AvalonDock windows -->
        <Style TargetType="{x:Type avalon:DockableFloatingWindow}" BasedOn="{x:Static MainApplication:GlobalStyles.WindowStyle}"/>
        <Style TargetType="{x:Type avalon:DocumentFloatingWindow}" BasedOn="{x:Static MainApplication:GlobalStyles.WindowStyle}"/>
        <Style TargetType="{x:Type avalon:FlyoutPaneWindow}" BasedOn="{x:Static MainApplication:GlobalStyles.WindowStyle}"/>
    </Application.Resources>

</Application>
