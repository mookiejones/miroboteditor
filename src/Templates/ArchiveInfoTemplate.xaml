<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:io="clr-namespace:System.IO;assembly=mscorlib"
                    xmlns:vm="clr-namespace:miRobotEditor.ViewModel">
    <vm:GetFileIconConverter x:Key="GetFileIconConverter"/>
    <vm:GetFileSystemInfosConverter x:Key="GetFileSystemInfosConverter"/>

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="GridLinesVisibility" Value="Vertical"></Setter>
        <Setter Property="RowHeaderWidth" Value="0"></Setter>
        <Setter Property="VerticalGridLinesBrush"
                Value="{Binding ElementName=splitter, Path=Background}"></Setter>
    </Style>
    <Style x:Key="CellEditStyle" TargetType="{x:Type TextBox}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="true">
                <Setter Property="ToolTip"
                            Value="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <DataTemplate x:Key="SignalToolTip" DataType="ToolTip">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Type}"/>
            <Separator/>
            <TextBlock Text="{Binding Description}"/>
        </StackPanel>
    </DataTemplate>

    <Style TargetType="{x:Type ToolTip}"       >
        <Setter Property="Background" Value="GhostWhite"/>
        <Setter Property="Opacity" Value="0.9"/>
    </Style>
    <!-- style to apply to DataGridTextColumn in edit mode  -->


    <!-- Archive File Information -->
    <DataTemplate DataType="{x:Type vm:InfoFile}">
        <StackPanel Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="IsReadOnly" Value="True"/>
                </Style>
            </StackPanel.Resources>
            <!-- General -->
            <GroupBox Header="General">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Archive Name" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="Config Type" Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Text="Disk No" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Text="ID" Grid.Row="3" Grid.Column="0"/>
                    <TextBlock Text="Date" Grid.Row="4" Grid.Column="0"/>
                    <TextBox Text="{Binding ArchiveName}" Grid.Column="1" Grid.Row="0" />
                    <TextBox Text="{Binding ArchiveConfigType}" Grid.Column="1" Grid.Row="1"/>
                    <TextBox Text="{Binding ArchiveDiskNo}" Grid.Column="1" Grid.Row="2" />
                    <TextBox Text="{Binding ArchiveID}" Grid.Column="1" Grid.Row="3" />
                    <TextBox Text="{Binding ArchiveDate}" Grid.Column="1" Grid.Row="4" />
                </Grid>
            </GroupBox>
            <!-- Roboter -->
            <GroupBox Header="Roboter">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Robot Name" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="Serial" Grid.Row="1" Grid.Column="0"/>
                    <TextBox Text="{Binding RobotName}" Grid.Column="1" Grid.Row="0"/>
                    <TextBox Text="{Binding RobotSerial}" Grid.Column="1" Grid.Row="1"/>
                </Grid>
            </GroupBox>
            <GroupBox Header="Version">
                <TextBox Text="{Binding KSSVersion}" />
            </GroupBox>
            <!-- TechPacks -->
            <GroupBox Header="TechPacks" VerticalAlignment="Stretch">
                <ListView ItemsSource="{Binding Technologies}" MinHeight="100" VerticalAlignment="Stretch">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Technology Name">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Version" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Version}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type io:FileInfo}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Height="16" Width="16" Source="{Binding Name, Converter={StaticResource GetFileIconConverter}, Mode=OneWay}" Margin="0,0,10,0"  />
            <TextBlock Text="{Binding Name}" Grid.Column="1" FontSize="14">
                <TextBlock.ToolTip>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                        <Separator/>
                        <TextBlock Text="{Binding IsReadOnly, StringFormat='Is Read Only:= {0}'}"/>
                        <TextBlock Text="{Binding Length, StringFormat='Size:= {0}'}"/>
                        <TextBlock Text="{Binding DirectoryName, StringFormat='Directory Name:= {0}'}"/>
                    </StackPanel>
                </TextBlock.ToolTip>
                </TextBlock>
        </Grid>
    </DataTemplate>
    <HierarchicalDataTemplate DataType="{x:Type io:DirectoryInfo}" ItemsSource="{Binding ., Converter={StaticResource GetFileSystemInfosConverter}}" >
        <TextBlock Text='{Binding Path=Name}' FontSize="14" />
    </HierarchicalDataTemplate>


    <DataTemplate DataType="{x:Type vm:ArchiveInfoViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Menu Height="25" VerticalAlignment="Top" Background="Transparent">
                <MenuItem Header="_File" Command="{Binding ImportCommand}" />
            </Menu>
            <TabControl VerticalAlignment="Stretch" Grid.Row="1" VerticalContentAlignment="Stretch" >
                <TabItem Header="Archive Files" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70*"/>
                            <RowDefinition Height="30*"/>
                        </Grid.RowDefinitions>
                    
                        <TreeView ItemsSource="{Binding Root, IsAsync=True}" Background="Transparent" />
                        <GroupBox Grid.Row="1" Header="Details" VerticalAlignment="Bottom" ToolTip="{Binding ArchiveZip.Name,StringFormat='Details for Archive File {0}'}">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding ArchiveZip.Name,StringFormat='Name = {0}'}"/>
                                <TextBlock Text="{Binding ArchiveZip.BufferSize,StringFormat='Buffer Size = {0}'}"/>
                                <TextBlock Text="{Binding ArchiveZip.Count,StringFormat='File Count = {0}'}"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </TabItem>
                <TabItem Header="Archive Information">
                    <Binding Path="Info"/>
                </TabItem>
                <TabItem Header="IO Points">
                    <TabItem.Resources>
                        <Style TargetType="{x:Type DataGrid}">
                            <Setter Property="AlternatingRowBackground" Value="SkyBlue"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="AutoGenerateColumns" Value="False"/>
                        </Style>
                    </TabItem.Resources>
                    <TabControl>
                        <TabItem Header="Digital" Visibility="{Binding DigitalVisibility}" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="50*"/>
                                </Grid.ColumnDefinitions>
                                <GroupBox Header="Digital In" Grid.Column="0" Content="{Binding Inputs}" Visibility="{Binding DigInVisibility}"/>
                                <GroupBox Header="Digital Out" Grid.Column="1" Content="{Binding Outputs}" Visibility="{Binding DigOutVisibility}"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Analog" Visibility="{Binding AnalogVisibility}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="50*"/>
                                </Grid.ColumnDefinitions>
                                <GroupBox Header="Analog In" Grid.Column="0" Content="{Binding AnIn}" Visibility="{Binding AnInVisibility}"/>
                                <GroupBox Header="Analog Out" Grid.Column="1" Content="{Binding AnOut}" Visibility="{Binding AnOutVisibility}"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Counters" Content="{Binding Counter}" Visibility="{Binding CounterVisibility}"/>
                        <TabItem Header="Timers" Content="{Binding Timer}" Visibility="{Binding TimerVisibility}"/>
                        <TabItem Header="Flags" Content="{Binding Flag}" Visibility="{Binding FlagVisibility}"/>
                        <TabItem Header="CycFlags" Visibility="{Binding CyclicFlagVisibility}"  Content="{Binding CycFlags}"/>
                    </TabControl>
                </TabItem>
                <TabItem Header="Language File">
                    <TextBox Text="{Binding DataBase}" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto"/>
                </TabItem>
            </TabControl>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>