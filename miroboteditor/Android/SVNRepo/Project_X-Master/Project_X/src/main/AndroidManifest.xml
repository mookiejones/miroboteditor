<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mookie.prototype"
    android:versionCode="130"
    android:versionName="1.3.0">

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <!-- For network access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- For Testing -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <!-- For Sync Adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_SYNC_STATS"/>
    <uses-permission android:name="android.permission.READ_SYNC_STATUS"/>

    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <!-- For Google Maps (cache) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- For Google Maps (Google web-based services) -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>

    <!-- Two optionals but recommended for Google Maps -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- Google Maps v2 require OpenGL v2 -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>

    <application
        android:name="com.mookie.prototype.YourApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:debuggable="true">
        <activity
            android:name=".home.YourAppMainActivity"
            android:label="@string/app_name"
            android:logo="@drawable/ic_launcher"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name="com.google.ads.AdActivity"
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <provider
                android:name="com.mookie.prototype.friends.FriendContentProvider"
                android:authorities="com.mookie.prototype.friends"
                android:exported="false" >
        </provider>

        <provider
            android:name=".tutorial.contentprovider.TutorialContentProvider"
            android:authorities="com.mookie.prototype.provider"
            android:exported="false"
            android:syncable="true"
            >
        </provider>

        <service
            android:name=".tutorial.sync.TutorialAuthenticatorService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/tutorial_authenticator" />
        </service>

        <service
            android:name=".tutorial.sync.TutorialSyncService"
            android:exported="false">
            <!-- android:process=":sync"-->
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter"
                android:resource="@xml/tutorial_syncadapter" />
        </service>

		<meta-data
			android:name="com.google.android.maps.v2.API_KEY"
			android:value="AIzaSyDNPreInss5-Yua-nkAHq9qvy84Yqc1wnY"/>
    </application>

</manifest>
