<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"    
    android:id="@+id/mainmenu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/mainmenu_button0"
            style="@style/ButtonText"
            android:background="@drawable/button_purple"
            android:text="@string/mainmenu_button0" >
        </Button>

        <Button
            android:id="@+id/mainmenu_button1"
            style="@style/ButtonText"
            android:background="@drawable/button_purple"
            android:text="@string/mainmenu_button1" >
        </Button>

        <Button
            android:id="@+id/mainmenu_button2"
            style="@style/ButtonText"
            android:background="@drawable/button_purple"
            android:text="@string/mainmenu_button2" >
        </Button>

        <Button
                android:id="@+id/mainmenu_button3"
                style="@style/ButtonText"
                android:background="@drawable/button_purple"
                android:text="@string/mainmenu_button3" >
        </Button>
    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="a150d852e9f388f"
        ads:loadAdOnCreate="true"
        ads:testDevices="TEST_EMULATOR, 1174B15820BDCDE357023377AAF1D72D, FB73634EFAFEF29BE7973A97B5543A4D"/>
    
</RelativeLayout>